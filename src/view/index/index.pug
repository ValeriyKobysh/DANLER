block variables
    - var title = 'Главная'

block content
    
    include ../../components/search/search

    main.index#index
        .index__container.container.content
            .index__content

                .index__header
                    aside.index__sidebar
                        ul.index__catalog.list
                            -for(var i = 0; i < 6; i++)
                                li.index__catalog-item
                                    a.index__catalog-link.link(href="javascript:;")
                                        span.index__catalog-image
                                            img(src=require("../../assets/image/mercedes-sprinter.png"), alt="")
                                        | Разборка Мерседес Вито (1999-2003)

                                    ul.index__category.list
                                        -for(var k = 0; k < 15; k++)
                                            li.index__category-item
                                                a.index__category-link.link(href="javascript:;")
                                                    span.index__category-image
                                                        img(src=require("../../assets/image/category/engines.png"))

                                                    span.index__category-title 
                                                        span Двигатель. Детали двигателя
                                                            span.index__category-count  (20)

                    flickity.index__slider(ref="flickity" :options="flickityOptions")
                        -for(var i = 0; i < 3; i++ )
                            .index__slide
                                .index__slide-text
                                    vue-typer.accent(
                                    text='Случилась неожиданная поломка?'
                                    :repeat="0"
                                    @typed="onTyped(" + i + ")"
                                    )
                                    vue-typer(
                                        v-if="typeds[" + i + "]"
                                        text='Решим проблему любого водителя!'
                                        :repeat="0"
                                        )
                                img.index__slide-image(src="http://via.placeholder.com/885x664")

                h1.index__h1 Магазин авторазборки

                include ../../components/last-products/last-products

                include ../../components/video/video

                include ../../components/excellence/excellence

                h2.index__heading Почему нам можно доверять?

                .index__trust


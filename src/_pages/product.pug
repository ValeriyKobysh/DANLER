extends ../_templates/_products-template

mixin carouselItem()
    li.info__carousel-item
        a.info__carousel-link(href="img/product/product-photo.png" rel="gallery-item" title="Двигатель. Детали двигателя")
            img(src="img/product/product-photo.png")

mixin aboutItem(title, value)
    li.about-item
        span.left-col #{title}
        span.right-col #{value}

mixin analogItem()
    li.s-product-analog-item
        img.s-product-analog-image(src="img/product/product-photo-analog.png")
        span.s-product-analog-text Блок двигателя Мерседес Спринтер 2.2 cdi (Mercedes Sprinter)
        a.s-product-analog-link(href="#")
            span.s-product-analog-link-icon.icon-plus
            span.s-product-analog-link-text Подробнее

block suctom_css
    link(rel="stylesheet" href="libs/fancybox/jquery.fancybox.css")
block title
    title Описание товара
block main_content
    section.section.section_path.s-product
        include ../_blocks/_breadcrumps/_breadcrumps
        .s-product__info.info
            .info__photo
                ul.info__carousel
                    - for (i = 0; i < 6; i++)
                        +carouselItem()
            .info__sell.wrapper-phone
                span.section__heading.section__heading_left Блок двигателя Мерседес Спринтер 2.2 cdi (Mercedes Sprinter)
                span.info__oe ОЕ Номер: 13132111131131331
                .info__wrap
                    span.info__price
                        span.info__price_color Цена: 
                        | 1234 грн.
                    span.info__availability.info__availability_true В наличии
                    span.info__art Артикул:
                a.info__buy(href="javascript:;")
                    span.info__buy-icon.icon-cart-plus
                    span.info__buy-text Купить
                a.call-back-link-prod(href="javascript:;")

                                ul
                                    li
                                        input#field-name.contact-form-field(type="text" placeholder="Ваше имя" name="name" form="contact-form")
                                        label.contact-form-label.error-label(for="field-name")
                                    li
                                        input#field-phone.contact-form-field(type="tel" placeholder="Ваш телефон" name="phone" form="contact-form")
                                        label.contact-form-label.error-label(for="field-phone")

extends ../_templates/_text-page-templete

mixin input(id, title, focus, error, type)
    .section-order-wrapper-input
        label.section-order-label(for=id) #{title}
        input.section-order-input#name(type="text" form="order-form" name=id autofocus={true: focus})
        label.error-label #{error}

mixin items(title, id, name)
    li.section-order-delivery-item
        label(for=id) #{title}
            input(type="radio" id=id name=name form="order-form")
block title
    title Оформление товара
block main_content
    .section-content__container
        section.section.section_full.section-order
            h1.section__heading Оформление товара
            form.section-order-form#order-form
                .section-order-left-col
                    +input("first-name", "Ваше имя", true, "", "text")
                    +input("second-name", "Ваша Фамилия", false, "Some Error Text", "text")
                    +input("phone", "Ваш телефон", false, "", "tel")
                    +input("mail", "Ваш e-mail", false, "", "email")
                .section-order-right-col
                    .section-order-wrapper-input
                        label.section-order-label(for="city") Ваш город
                        input.section-order-input#city(type="text" form="order-form" name="city" )
                    .section-order-wrapper-input
                        label.section-order-label Способ отправки
                        a.section-order-delivery-heading(href="javascript:;")
                            span.section-order-delivery-text(data-name="delivery-item") Выберите способ отправки
                            i.icon.icon-down-open-big
                        ul.section-order-delivery-list
                            +items("Новая почта", "new-post", "delivery-item")
                            +items("Самовывоз", "yourself-del", "delivery-item")
                            +items("Деливери", "del-del", "delivery-item")
                            +items("Евроэкспресс", "eurooexpress", "delivery-item")
                            +items("Автолюкс", "autolux", "delivery-item")
                            +items("Гюнсел", "gunsel", "delivery-item")
                            +items("Ин-Тайм", "intime", "delivery-item")
                            +items("Ночной Экспресс", "nightexpress", "delivery-item")
                            +items("Ин-Тайм", "intime", "delivery-item")
                    .section-order-wrapper-input
                        label.section-order-label Способ оплаты
                        a.section-order-pay-heading(href="javascript:;")
                            span.section-order-pay-text(data-name="pay-item" form="order-form") Выберите способ оплаты
                            i.icon.icon-down-open-big
                        ul.section-order-pay-list
                            +items("Карта Приват Банка", "privat-bank", "pay-item")
                            +items("Оплата наличными", "cash", "pay-item")
                            +items("Наложений платёж", "cod", "pay-item")
                    .section-order-wrapper-input
                        label.section-order-label(for="comment") Добавить комментарий
                        textarea.section-order-textarea#commemnt(form="order-form" name="comment")
                    .section-order-wrapper-input
                        button.section-order-submit(type="submit" form="order-form") Отправить
            .modal-submit
                input.modal-state#modal-1(type="checkbox")
                .modal-fade-screen
                    .modal-inner
                        .modal-close
                        p.modal-inner-heading Спасибо! Ваша заявка принята
                        p.modal-inner-description Наш менеджер свяжется с Вами в ближайшее время
block custom_scripts
    script(src="js/order_page.js")
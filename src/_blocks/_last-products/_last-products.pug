mixin controlItem(title, active)
    li.last-products__control-item(class={active: active})
        button.last-products__control-btn #{title}

mixin contentItem(active)
    li.last-products__content-item(class={active: active})
        +productsList()

mixin productsList()
    ul.last-products__list
        - for (var k = 0; k < 4; k++)
            li.last-products__item
                img.last-products__img(src="http://via.placeholder.com/220x165", alt="")
                h5.last-products__title Блок двигателя Мерседес Спринтер 2.2 cdi (Mercedes Sprinter)
                a.last-products__link(href="products.html")
                    span.last-products__icon
                        svg(xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" viewBox="0 0 490 490" xml:space="preserve")
                            polygon(points="222.031,490 267.969,490 267.969,267.969 490,267.969 490,222.031 267.969,222.031 267.969,0 222.031,0 222.031,222.031 0,222.031 0,267.969 222.031,267.969 ")
                    span.last-products__text Подробнее

.last-products
    p.last-products__heading Последние добавленные запчасти
    ul.last-products__control-list
        +controlItem("Мерседес Спринтер", true)
        +controlItem("Мерседес Вито", false)
        +controlItem("Фольксваген Т4", false)
        +controlItem("Опель Виваро", false)
        +controlItem("Фольксваген ЛТ", false)
        +controlItem("Рено Трафик", false)
    ul.last-products__content-list
            +contentItem(true)
            +contentItem(false)
            +contentItem(false)
            +contentItem(false)
            +contentItem(false)
            +contentItem(false)
    a.last-products__all(href="products.html") Все запчасти
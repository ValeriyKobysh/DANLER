- 
    var mobileMenu = [
    {'title': "Главная"
    },
    {'title': "Каталог",
        'catalog': "Мерседес Вито"
    },
    {'title': "Доставка и оплата"
    },
    {'title': "Статья"
    },
    {'title': "Упаковка"
    },
    {'title': "Контакты"
    }
    ];


.mobile-menu__block.container
    ul.mobile-menu__list
        each item in mobileMenu
            li.mobile-menu__item
                a.mobile-menu__link(href="#" class={"mobile-menu__link_dropdown": item.catalog})= item.title
                - if(item.catalog)
                    ul.mobile-submenu__list
                        li.mobile-submenu__item
                            button.mobile-submenu__link= item.catalog
                            ul.mobile-submenu__catalog-list
                                - for(var i = 0; i < 7; i++)
                                    li.mobile-submenu__catalog-item
                                        a.mobile-submenu__catalog-link(href="#")
                                            span.mobile-submenu__catalog-image
                                                img(src="img/category/engines.png" alt="")
                                            span.mobile-submenu__catalog-text Двигатель. 
                                                span.mark &nbsp;(20)